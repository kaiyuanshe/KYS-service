{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveSymlinks": true,
        "declaration": true,
        "importHelpers": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "outDir": "dist/"
    },
    "include": ["src/**/*"]
}
